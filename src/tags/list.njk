---
layout: layouts/base.njk
title: tags
permalink: /tags/
---
{%- set tagList = collections.tagList %}
{%- set alphabetSorted = tagList | alphabetSort %}
{%- set hasTags = false %}
<section>
	<h1>tags</h1>
	<ul class="links text-center">
		{% for letter, tags in alphabetSorted -%}
		<li><a {{ 'href=#' + letter if tags.length else '' }}>{{ letter }}</a></li>
		{%- endfor %}
	</ul>
	<div class="h-feed">
	{%- for letter, tags in alphabetSorted -%}
		{% if tags.length > 0 %}
		<h4 id="{{ letter }}">{{ letter }}</h4>
		<ul role="list">
		{%- for tag in tags | sort %}
			{%- set tagUrl %}/tags/{{ tag | slug }}/{% endset %}
			<li><a href="{{ tagUrl | url }}">{{ tag }} ({{ tagList[tag].length }})</a></li>
		{%- endfor %}
		</ul>
		{%- set hasTags = true -%}
		{% endif %}
	{%- endfor %}
	{% if not hasTags %}
	<h4>There are no tags</h4>
	{% endif -%}
	</div>
</section>