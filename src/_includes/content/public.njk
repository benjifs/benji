{% extends "base.njk" %}

{% block content %}
<section class="page-wrapper">
	<article class="h-entry bookmark">
		{%- set entry = page %}
		{%- set categories = tags %}
		{% include "entry/details.njk" %}

		{%- set bookmark = 'bookmark-of' | getVariable %}
		{%- set liked = 'like-of' | getVariable %}
		{%- set reply = 'in-reply-to' | getVariable %}
		{%- if liked %}
			<h1>&nbsp;</h1>
			{%- set likedTitle = title %}
			{% include "entry/like.njk" %}
		{%- elif bookmark %}
			<h1>&nbsp;</h1>
			{%- set bookmarkTitle = title %}
			{% include "entry/bookmark.njk" %}
		{%- elif rsvp %}
			<h1>&nbsp;</h1>
			{% include "entry/rsvp.njk" %}
		{%- elif title %}
			<h1 class="p-name">{{ title }}</h1>
			{%- set postDate = page.date %}
			{%- set postContent = content %}
			{% include "entry/article.njk" %}
		{%- else %}
			<h1>&nbsp;</h1>
			{%- set noteContent = content %}
			{% include "entry/note.njk" %}
		{%- endif %}

		{% include "entry/footer.njk" %}
	</article>
</section>
{% endblock content %}