{
	"version": "https://jsonfeed.org/version/1",
	"title": "{{ metadata.title }}",
	"home_page_url": "{{ metadata.url }}",
	"feed_url": "{{ jsonfeed }}",
	"description": "{{ metadata.description }}",
	"favicon": "{{ metadata.favicon }}",
	"icon": "{{ metadata.icon }}",
	"author": {
		"name": "{{ metadata.author.name }}",
		"url": "{{ metadata.author.url }}",
		"avatar": "{{ metadata.author.image }}"
	},
	"items": [
		{%- for item in entries %}
		{
			"id": "{{ metadata.url }}{{ item.url }}",
			"url": "{{ metadata.url }}{{ item.url }}",
			{%- set itemTitle %}
				{%- if item.data['bookmark-of'] %}
				Bookmarked
					{%- if item.data.title %} \"{{ item.data.title | safe }}\"
					{%- else %} {{ item.data['bookmark-of'] }}
					{%- endif %}
				{%- elif item.data['like-of'] %}
				Liked
					{%- if item.data.title %} \"{{ item.data.title | safe }}\"
					{%- else %} {{ item.data['like-of'] }}
					{%- endif %}
				{%- elif item.data['in-reply-to'] %}
				Reply to {{ item.data['in-reply-to'] }}
				{%- elif item.data['watch-of'] %}
				{{ "Rewatched" if item.data['watch-of'].properties.rewatch else "Watched" }} {{ item.data.summary | safe }}
				{%- elif item.data.title %}
				{{ item.data.title }}
				{%- endif %}
			{%- endset %}
			{%- if itemTitle %}
			"title": "{{ itemTitle | trim | safe }}",
			{%- endif %}
			{%- set itemContent %}
				{%- if item.data['bookmark-of'] %}
				Bookmarked {{ item.data['bookmark-of'] }}
				{%- elif item.data['like-of'] %}
				Liked {{ item.data['like-of'] }}
				{%- elif item.data['watch-of'] %}
				{{ item.data['watch-of'].properties.content.html | striptags }}
				{%- elif item.templateContent %}
				{{ item.templateContent | striptags | safe }}
				{%- elif item.data.summary %}
				{{ item.data.summary | striptags | safe }}
				{%- endif %}
			{%- endset %}
			{%- if itemContent %}
			"content_text": "{{ itemContent | trim | safe }}",
			{%- endif %}
			"date_published": "{{ item.date | dateISO }}"
			{%- if item.data.tags -%}
			,
			"tags": [
				"{{ item.data.tags | join('", "') | safe }}"
			]
			{%- endif %}
		}
		{%- if not loop.last -%}
		,
		{%- endif -%}
		{%- endfor %}
	]
}