{%- set watchOf = 'watch-of' | getVariable -%}
{%- set rewatch = rewatch if rewatch else entry.data.rewatch %}
{%- set rating = rating if rating else entry.data.rating %}
{%- if watchOf -%}
	{%- set watchOfProps = watchOf.properties -%}
	{%- if watchOfProps -%}
	<span class="u-watch-of h-cite">
		{%- set watchStatus = "Rewatched" if rewatch == "true" else "Watched" %}
		<div class="p-summary">
			<data class="p-x-watch-status" value={{ watchStatus | lower }}>{{ watchStatus }}</data>
			{%- set watchedTitle -%}
				{%- if watchOfProps['name'] -%}
					<span class="p-title">{{ watchOfProps['name'] }}</span>
					{%- if watchOfProps['published'] -%}
					,&nbsp;<span class="p-year">{{ watchOfProps['published'] }}</span>
					{%- endif -%}
				{%- else -%}
				{{ summary }}
				{%- endif -%}
			{%- endset -%}
			{%- set watchedRating -%}
				{%- if rating -%}
				&nbsp;-&nbsp;<span class="p-rating">{{ rating | toStars }}</span>
				{%- endif -%}
			{%- endset -%}
			&nbsp;
			{%- if syndication -%}
			<a href='{{ syndication }}'>{{ watchedTitle | safe }}{{ watchedRating | safe }}</a>
			{%- elif watchOfProps['url'] -%}
			<a href="{{ watchOfProps['url'] }}">{{ watchedTitle | safe }}</a>{{ watchedRating | safe }}
			{%- else -%}
			{{ watchedTitle }}{{ watchedRating | safe }}
			{%- endif -%}
		</div>
	</span>
	<div class="e-content">
		{%- if watchOfProps['photo'] %}
		<p class="img-block">
			<img src="{{ watchOfProps['photo'] }}" alt="{{ watchOfProps['name'] }} ({{ watchOfProps['published'] }}) poster" />
		</p>
		{% endif -%}
		{%- if spoiler %}
		<details>
			<summary>Spoiler</summary>
		{% endif -%}
		{{ noteContent | safe }}
		{%- if spoiler %}
		</details>
		{% endif -%}
	</div>
	{% endif %}
{%- endif %}