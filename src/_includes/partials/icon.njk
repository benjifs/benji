{%- set icons = {
	like: { label: 'likes', icon: 'star' },
	bookmark: { label: 'bookmarks', icon: 'bookmark-simple' },
	rsvp: { label: 'RSVPs', icon: 'calendar', href: 'rsvp' },
	read: { label: 'read', icon: 'book' },
	watched: { label: 'watched', icon: 'film-slate' },
	article: { label: 'articles', icon: 'newspaper' },
	reply: { label: 'replies', icon: 'arrow-bend-up-left' },
	note: { label: 'notes', icon: 'note' }
} -%}
{% if icons[entryType] -%}
<a class="post-type{{ ' selected' if currentPage == (icons[entryType].href or icons[entryType].label) }}" href="/{{ icons[entryType].href or icons[entryType].label }}" title="{{ icons[entryType].label }}"><img class="svg sm" src="/assets/phosphor/{{ icons[entryType].icon }}.svg" alt="{{ icons[entryType].label }}"/></a>
{%- endif %}