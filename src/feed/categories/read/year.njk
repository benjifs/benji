---
layout: layouts/base.njk
pagination:
  data: years
  size: 1
  alias: year
permalink: "/read/{{ year | slugify }}/"
years:
  - 2022
  - 2023
---
{%- set entries = collections.read | reverse | byDataProperty('progress', 'finished') | byYear(year) -%}
<section>
	<h1>read: {{ year }} ({{ entries | length }})</h1>
	{%- if entries.length %}
	<div class="h-feed posters">
		<div><h2></h2><a href="/read">all</a> • <a class="{{ 'selected' if year == 2023 }}" href="/read/2023">2023</a> • <a class="{{ 'selected' if year == 2022 }}" href="/read/2022">2022</a></div>
		{%- for entry in entries %}
		{%- include "partials/book.njk" -%}
		{% endfor -%}
	</div>
	{% endif -%}
</section>