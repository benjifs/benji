---
permalink: twtxt.txt
eleventyExcludeFromCollections: true
---
{%- set shortUrl = metadata.shortUrl | replace(r/^https?:\/\//, '') %}
{%- for item in collections.feed | reverse %}
{%- set linkPrefix %}{% prefix item.url %}{% endset %}
{%- set shortlink = item.url | shortlink %}
{%- set pagelink = shortUrl + '/' + linkPrefix + shortlink %}
{%- set entryContent -%}
	{%- if item.data.title -%}
	{{ item.data.title }}
	{%- else -%}
		{%- set content = item.templateContent | striptags | truncate(140) | trim | safe -%}
		{%- if content != '' -%}
			{{ content }}
		{%- else -%}
			{{ item.data['summary'] | striptags | truncate(140) | trim | safe }}
		{%- endif -%}
	{%- endif -%}
{%- endset -%}
{#- Can also use dateToRfc3339 but the one below seems to be more commonly used -#}
{{ item.date | dateISO | replace(r/\.[0-9]{3}/, '') }}	{{ entryContent | safe }}{{ ' | ' + pagelink if shortlink else '' }}
{% endfor -%}
